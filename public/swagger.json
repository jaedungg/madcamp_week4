{
  "openapi": "3.0.0",
  "info": {
    "title": "Documents API",
    "version": "1.0.0",
    "description": "API for creating and fetching documents"
  },
  "paths": {
    "/api/documents": {
      "post": {
        "summary": "Create a document",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DocumentInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Document created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Document"
                }
              }
            }
          },
          "400": {
            "description": "Missing required fields"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "summary": "Get list of documents",
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 10 } },
          { "name": "category", "in": "query", "schema": { "type": "string" } },
          { "name": "status", "in": "query", "schema": { "type": "string" } },
          { "name": "search", "in": "query", "schema": { "type": "string" } },
          { "name": "sortBy", "in": "query", "schema": { "type": "string", "enum": ["created_at", "updated_at", "title", "word_count"] } },
          { "name": "sortOrder", "in": "query", "schema": { "type": "string", "enum": ["asc", "desc"] } },
          { "name": "favoritesOnly", "in": "query", "schema": { "type": "boolean" } },
          { "name": "user_id", "in": "query", "schema": { "type": "string", "format": "uuid" } }
        ],
        "responses": {
          "200": {
            "description": "List of documents",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DocumentListResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DocumentInput": {
        "type": "object",
        "required": ["title", "category", "user_id"],
        "properties": {
          "title": { "type": "string" },
          "content": { "type": "string" },
          "category": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "user_id": { "type": "string", "format": "uuid" }
        }
      },
      "Document": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "title": { "type": "string" },
          "content": { "type": "string" },
          "excerpt": { "type": "string" },
          "word_count": { "type": "integer" },
          "category": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "status": { "type": "string" },
          "is_favorite": { "type": "boolean" },
          "ai_requests_used": { "type": "integer" },
          "user_id": { "type": "string", "format": "uuid" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" },
          "last_modified_at": { "type": "string", "format": "date-time" }
        }
      },
      "DocumentListResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "documents": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Document" }
          },
          "pagination": {
            "type": "object",
            "properties": {
              "total": { "type": "integer" },
              "page": { "type": "integer" },
              "limit": { "type": "integer" },
              "totalPages": { "type": "integer" }
            }
          },
          "stats": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "category": { "type": "string" },
                "_count": { "type": "object", "properties": { "_all": { "type": "integer" } } }
              }
            }
          }
        }
      }
    }
  }
}
